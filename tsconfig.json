{
  "target": "esnext",
  "compilerOptions": {
    "rootDir": "./src",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2019", "es6", "es2015", "dom"],
    "declaration": false,
    "outDir": "dist",
    "strict": true,
    "types": ["node", "enquirer"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src", "./typings"]
}
